/* pages/logs/logs.wxss */
.logs {
  padding: 20rpx;
  background: #fbfcfc;
}
.logs-item {
  width:100%;
  background:#fff;
  border-radius:6rpx;
  padding:20rpx;
  box-sizing:border-box;
  box-shadow:0 0 10rpx #ddd;
  margin-bottom:30rpx;
  overflow:hidden;
  position: relative;
}
.item-tit {
  font-size:30rpx;
  color:#4BA0BE;
  margin-bottom:20rpx;
  display:block;
}
.item-txt {
  font-size: 30rpx;
  display: block;
  color: #333;
  word-break: break-all;
}
.hide {
  max-height: 200rpx;
  overflow: hidden;
}
.more {
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  background: linear-gradient(rgba(255, 255, 255, .6), rgba(255, 255, 255, 1))
}